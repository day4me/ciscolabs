#include <vector>
#include <iostream>

using namespace std;
int main()
{
	float m[]{ 0,5,0.5,2.3,4.7};
	vector <float> v(5);
	float n = 0;
	float s = 0;
	cout << "enter your number: ";
	cin >> n;
	for (int i = 0; i < v.size(); ++i) {
		v[i] = m[i] + n;
		s += v[i];
	}
	cout <<"sum: "<< s << endl;
	cout <<"avg: "<< s / v.size() << endl;
	
	system("pause");
	return 0;
}
